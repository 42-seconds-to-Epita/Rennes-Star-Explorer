<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/metro_list_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/metro_list_card_picto"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/metro_list_card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ligne b"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/metro_list_card_long_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Cesson-Sévigné (Cesson - Viasilva) - Rennes - Saint-Jacques-de-la-Lande (Saint-Jacques - Gaîté)" />

            <TextView
                android:id="@+id/metro_list_card_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Status : En panne" />

            <TextView
                android:id="@+id/metro_list_card_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="2 parcours" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>